<UserControl x:Class="EventExample.ColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventExample"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button Name="RedButton" Click="ClickColor" Background="IndianRed" Foreground="White" Grid.Column="0">Red Button</Button>
        <Button Name="BlueButton" Click="ClickColor" Background="DarkBlue" Foreground="White" Grid.Column="1">Blue Button</Button>
    </Grid>
</UserControl>
